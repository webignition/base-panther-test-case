{
    "name": "webignition/base-panther-test-case",
    "description": "",
    "keywords": [],
    "homepage": "https://github.com/webignition/base-panther-test-case",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "webignition\\BasePantherTestCase\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\BasePantherTestCase\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs-fixer-dry-run": "docker run --rm $(if [ ! -z \"${NO_TTY}\" ]; then echo \"\"; else echo \"-t\"; fi) -w=/app -v ${PWD}:/app oskarstark/php-cs-fixer-ga:latest --allow-risky=yes --dry-run --verbose --show-progress none",
        "cs-fixer-fix": "docker run --rm $(if [ ! -z \"${NO_TTY}\" ]; then echo \"\"; else echo \"-t\"; fi) -w=/app -v ${PWD}:/app oskarstark/php-cs-fixer-ga:latest --allow-risky=yes --diff",
        "cs-phpcs": "./vendor/bin/phpcs",
        "cs": [
            "@cs-fixer-dry-run",
            "@cs-phpcs"
        ],
        "static-analysis": "./vendor/bin/phpstan analyse --ansi",
        "test": "./vendor/bin/phpunit --colors=always",
        "ci": [
            "@composer cs",
            "@composer static-analysis",
            "@composer test"
        ]
    },
    "require": {
        "php": "^7.4|^8",
        "symfony/panther": "^2.0",
        "phpunit/phpunit": "^9.5",
        "webignition/symfony-panther-webserver-runner": ">=0.5,<1"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "3.*",
        "phpstan/phpstan": "^1.3",
        "dbrekelmans/bdi": "^1.0"
    }
}
