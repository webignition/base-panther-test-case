{
    "name": "webignition/base-panther-test-case",
    "description": "",
    "keywords": [],
    "homepage": "https://github.com/webignition/base-panther-test-case",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "webignition\\BasePantherTestCase\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\BasePantherTestCase\\Tests\\": "tests"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@patch-panther-compatible-with-browserkit"
        ],
        "post-update-cmd": [
            "@patch-panther-compatible-with-browserkit"
        ],
        "patch-panther-compatible-with-browserkit": [
            "echo 'Patching vendor/symfony/panther/src/Client.php'",
            "sed -i 's/protected function doRequest($request): object/protected function doRequest($request)/g' vendor/symfony/panther/src/Client.php",
            "sed -i 's/protected function doRequest($request)/protected function doRequest($request): object/g' vendor/symfony/panther/src/Client.php",
            "echo 'Patching vendor/symfony/panther/src/DomCrawler/Crawler.php'",
            "sed -i 's/public function closest(string $selector): ?static/public function closest(string $selector): ?self/g' vendor/symfony/panther/src/DomCrawler/Crawler.php",
            "sed -i 's/public function closest(string $selector): ?self/public function closest(string $selector): ?static/g' vendor/symfony/panther/src/DomCrawler/Crawler.php"
        ],
        "cs-fixer-dry-run": "./vendor/bin/php-cs-fixer check --allow-risky=yes --verbose --show-progress none",
        "cs-fixer-fix": "./vendor/bin/php-cs-fixer fix --allow-risky=yes --diff",
        "cs-phpcs": "./vendor/bin/phpcs",
        "cs": [
            "@cs-fixer-dry-run",
            "@cs-phpcs"
        ],
        "static-analysis": "./vendor/bin/phpstan analyse --ansi",
        "test": "./vendor/bin/phpunit --colors=always",
        "ci": [
            "@composer cs",
            "@composer static-analysis",
            "@composer test"
        ]
    },
    "require": {
        "php": "^8.4",
        "symfony/panther": "^1.0|^2.0",
        "phpunit/phpunit": "^10 || ^11 || ^12",
        "webignition/symfony-panther-webserver-runner": ">=0.6,<1"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "3.*",
        "phpstan/phpstan": "^1.3",
        "dbrekelmans/bdi": "^1.0",
        "friendsofphp/php-cs-fixer": "^3.92"
    }
}
